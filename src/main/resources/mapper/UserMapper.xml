<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.monkey_server.dao.UserDao">
    <select id="selectUserByName" resultType="com.example.monkey_server.entity.User">
        SELECT * FROM user WHERE name = #{name}
    </select>

    <select id="selectUserByNameAndPassword" resultType="map">
        SELECT user.id,user.name,user.nickname,user.phone,user.gender,user.head FROM user WHERE name = #{name} and password=#{password}
    </select>

    <select id="selectUserById" resultType="map">
        SELECT user.id,user.name,user.nickname,user.phone,user.gender,user.head FROM user WHERE id = #{id}
    </select>
</mapper>