<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.monkey_server.dao.MusicDao">

    <select id="searchMusicById" resultType="com.example.monkey_server.entity.Music">
        SELECT * FROM music WHERE id = #{id}
    </select>

    <select id="getSleepBeforeMusic" resultType="com.example.monkey_server.entity.Music">
        SELECT * FROM music WHERE type = 0 order by music.playTimes limit #{currentSize}, #{pageSize}
    </select>
</mapper>